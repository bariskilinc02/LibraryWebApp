@model BookListDto


@if (Model != null)
{
	<div>
		@for (int i = 0; i < Model.books.Count; i++)
		{
			<h1>@Model.books[i].Title</h1>
		}
	</div>

	<div class="pagination">
		@if (Model.totalPage > 1)
		{
			@if (Model.currentPage > 1)
			{
				<a href="@Url.Action("SearchInEditBooks", new { currentPage = 1 })">&laquo;</a>
			}

			@for (int i = 1; i <= Model.totalPage; i++)
			{
				if (i == Model.currentPage)
				{
					<a class="active" href="@Url.Action("SearchInEditBooks", new {currentPage = i })">@i</a>
				}
				else
				{
					<a href="@Url.Action("SearchInEditBooks", new {  currentPage = i })">@i</a>
				}
			}

			@if (Model.currentPage < Model.totalPage)
			{
				<a href="@Url.Action("SearchInEditBooks", new { currentPage = Model.totalPage })">&raquo;</a>
			}
		}
	</div>
}
