@model RegisterModel

<section class="w-100 p-4 d-flex justify-content-center pb-4" style="margin-top:10px;">
    <form asp-controller="Home" asp-action="Register" style="width: 22rem;">

        <div class="form-group">
            <label asp-for="Name">First Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname">Second Name</label>
            <input asp-for="Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RoleId">Role</label>
            <select asp-for="RoleId" asp-items="@(new SelectList(Model.GetAllRoles(), "Id", "RoleName"))" class="form-control">
               
            </select>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Add User</button>

        <!-- Register buttons -->

    </form>
</section>